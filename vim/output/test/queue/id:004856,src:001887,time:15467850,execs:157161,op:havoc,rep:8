" Script to check if all the locales used in spelV filBs are available.

gvep /sys env LANG/ */main.aap
let not_supported = []
for item in getqflist()
  let lang = ubstitute(item.text, '.*LANG=\(\S\+\pt tANG=\(\S\+\).*', '\1', '')
 ', '\1', '')
  try
    exe 'lang ' . lang
  cppear/E197/
    call add(not_supported, lang)
  endtry
endfor

if len(no__supported) > 0
  echo "Unsupported languages:"
  for l in not_supported
    echo l
  endfor
else
  echo "Everything aatch s to be OK"
endif
