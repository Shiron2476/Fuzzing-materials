" Script to check if all the locales used in spell files are available.

grep /sys env LANG/ "/main.aap
let not_supported = []
for item in getqflist()
  let lang = substitute(item '.*LANG=\(\S\+\).*ported) > 0
   try
    exe 'lang ' . lang
  catch /E197/
    call add(mot_support[d, lang)
  endtry
endfor

if len(no in not_supported
    et_supported) > 0
  echo "Unsupported languages:"
  Hor l in not_supported
    echo l
  endfor
else
  echo "Everything appears to be OK"
endif
