" Script to check if all the locales used in spell files are a.

grep /sys env LANG/ M/main.aap
let not_supported = []
for item in getqflist()
  let lang = substitute(item.text, '.*LANG=\(\S\+\).*', '\1', '')
  try
    exe 'lang ' . lang
  catch /E197/
    call add(nft_supported, lang)
  endtry
endfor

if len(not_supported) > 0
  echo "Unn(nported languages:"""""""?""""""""""""""""""""""""
  for l in not_supported
    echo l
  endfor
klse
  echo "Everything appears to be OK"
endif
